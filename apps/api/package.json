{
  "name": "@repo/api",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev:old": "NODE_ENV=development tsx watch src/server",
    "dev": "NODE_ENV=development rm -rf ./dist && rm -rf ./.out && tsc-watch --project tsconfig.watch.json --noEmit false --onSuccess 'pnpm dev:run'",
    "dev:run": "tsc-alias && node -r dotenv/config ./dist/server.js",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" src",
    "type-check": "tsc",
    "build": "rimraf dist && tsc --noEmit false && tsc-alias",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@trpc/server": "^11.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "superjson": "^2.2.1",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^7.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.3"
  }
}
